<div style="padding: 0.5em; background: #ECEDE5; box-shadow: 0 0 4px rgba(0, 0, 0, 0.23);"">
  <%= search_form_for @q, url: users_path do |f| %>

    <%= f.label :housewife_year, "主婦歴" %>
    <%= f.number_field :housewife_year_gteq, min:1, max:100 %>以上〜
    <%= f.number_field :housewife_year_lt, min:1, max:100 %>未満<br>

    <%= f.label :introduction_cont, "自己紹介文" %>
    <%= f.search_field :introduction_cont %><br>

    <%= f.label :current_trouble_categories, "今悩んでいること" %><br>
    <%= f.collection_check_boxes :current_trouble_categories_id_in, TroubleCategory.all, :id, :name %><br>

    <%= f.label :past_trouble_categories, "過去悩んでいたこと" %><br>
    <%= f.collection_check_boxes :past_trouble_categories_id_in, TroubleCategory.all, :id, :name %><br>

    <%= f.submit '検索' %><br>
  <% end %>
</div>