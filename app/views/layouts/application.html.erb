<!DOCTYPE html>
<html>
  <head>
    <title>Consultation</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://kit.fontawesome.com/3429187a4c.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/users">主婦のお悩み相談室</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to notifications_path, class: "nav-link",  style: "position: relative;" do %>
                <% if unchecked_notifications.any? %>
                  <i class="fas fa-circle" style="position: absolute; top: 0; left: 0; color: #efa04c; font-size: 1em;"></i>
                  <i class="far fa-bell fa-lg" style="font-size: 1.5em;"></i>通知
                <% else %>
                  <i class="far fa-bell fa-lg" style="font-size: 1.5em;"></i>通知
                <% end %>
              <% end %>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users"><i class="fas fa-search"></i>ユーザ検索</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/rooms"><i class="far fa-envelope"></i>DMを見る </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="far fa-user"></i>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                <%= link_to edit_user_path(current_user), class:"dropdown-item" do %>
                  設定
                <% end %>
                <%= link_to user_path(current_user), class:"dropdown-item" do %>
                  マイページ
                <% end %>
                <%= link_to destroy_user_session_path, method: :delete, class:"dropdown-item"  do %>
                  Log out
                <% end %>
              </div>
            </li>
          </ul>
        </div>
      </nav>

    <% else %>

      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">主婦のお悩み相談室</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to new_user_session_path, class: "nav-link" do %>
                <i class="fas fa-sign-in-alt"></i>ログイン
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: "nav-link" do %>
                <i class="fas fa-user-plus"></i>会員登録
              <% end %>
            </li>
          </ul>
        </div>
      </nav>
    <% end %>

    <%= yield %>
  </body>
</html>
