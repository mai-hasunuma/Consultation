<!DOCTYPE html>
<html>
  <head>
    <title>Consultation</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="container">
          <div class="navbar-header">
            <p class="navbar-text">主婦のお悩み相談室</p>
          </div>

          <% if user_signed_in? %>
            <div class="collapse navbar-collapse" id="navbarEexample7">
              <ul class="nav navbar-nav navbar-right">
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>Log out
                  <% end %>
                </li>

          <% else %>
            <div class="collapse navbar-collapse" id="navbarEexample7">
              <ul class="nav navbar-nav navbar-right">
                <li><%= link_to new_user_registration_path do %>
                  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> sign up
                  <% end %>
                </li>
                <li><%= link_to new_user_session_path do %>
                  <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> login
                  <% end %>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
　　 </nav>
    <%= yield %>
  </body>
</html>
