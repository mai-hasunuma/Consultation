<div class="container-fluid">
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-9">
      <div class="row", style="margin-top: 20px;">
        <div class="col-md-4">
          <span>カテゴリ</span>
          <% @board.board_categories.each do |b| %>
            <%= b.name %>
          <% end %>
        </div>
        <div class="col-md-2">
          <span>コメント数</span>
          <%= @board.board_comments.count %>
        </div>
        <div class="col-md-2">
          <span>作成日</span>
            <%= @board.created_at.strftime("%Y/%m/%d") %>
        </div>
        <div class="col-md-4">
          <span>最終更新日</span>
          <% if @board.board_comments.empty? %>
            <%= @board.updated_at.strftime("%Y/%m/%d") %>
          <% else %>
            <%= @board.board_comments.last.created_at.strftime("%Y/%m/%d")  %>
          <% end %>
        </div>
        <div class="col-md-2">
          <% if @board.user == current_user %>
            <%= link_to 'スレッド編集', edit_board_path %>
          <% end %>
        </div>
      </div>
      <div class="row", style="margin-top: 20px;">
        <div class="col-md-2"></div>
        <div class="col-md-9", style="margin-bottom: 20px;">
          <h1><%= @board.title %></h1>
        </div>
      </div>
      <div class="row">
        <%= @board.user.name %>
        <% if @board.user.image.attached? %>
          <%= image_tag @board.user.image, size: 100 %>
        <% end %>

        <%= @board.content %>
      </div>
      <% if @board.images.attached? %>
        <% @board.images.each do |image| %>
          <%= image_tag image %> <br>
        <% end %>
      <% end %>

      <div id='chat'>
        <% @board_comments.each do |board_comment| %>
          <%= board_comment.content %>
          <% if board_comment.user.image.attached? %>
            <%= image_tag url_for(board_comment.user.image) %>
          <% else %>
            <%= image_tag "no_image.png", size: 40 %>
            <%# image = board_comment.user.image %>
            <%# image_url = Rails.application.routes.url_helpers.polymorphic_url(image) %>
        <!--     rubyの式を書く時はこのようにする -->
            <!-- <img src=<%#= image_url %>> -->
          <% end %>
          <p><%= board_comment.user.name %></p>
          <% end %>
      </div>

      <form>
        投稿： <input type="text" />
        <input type="submit" value="投稿" onClick="postBoardMessage()" />
      </form>
    </div>
  </div>
</div>